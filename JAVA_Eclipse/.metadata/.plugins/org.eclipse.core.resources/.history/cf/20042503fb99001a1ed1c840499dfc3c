package Page162_6p4;

import java.util.Scanner;

// Obtem tres valores de ponto flutuante e localiza o valor maximo
public class MaximumFinder {
	public static void main(String[] args) {
		
		// Scanner para a entrada de dados
		Scanner input = new Scanner(System.in);
		
		// Solicita e insere tres valores
		System.out.println("Enter three floating-point values separated by spaces: ");
		double num1 = input.nextDouble(); // lê o 1 valor
		double num2 = input.nextDouble(); // lê o 2 valor
		double num3 = input.nextDouble(); // lê o 3 valor
		
		// Determina o valor maximo
		double result = maximum(num1, num2, num3);
		
		// Exibe o valor max
		System.out.println("Maximum is: " + result);
	}
	
	
	// Retorna o maximo dos seus três parametros
	public static double maximum(double x, double y, double z) {
		double maximumValue = x; //supõe que x é maior
		
		// se y é maior que valor inicial
		if(y > maximumValue)
			maximumValue = y;
		
		// se z é maior que maximumValue 'y'
		if(z > maximumValue)
			maximumValue = z;
		
		// retorna o valor
		return maximumValue;
	}
}
